---
layout: base
---
<article 
    id="{{ title | slug }}" 
    class="project h-entry" 
    role="article" 
    itemscope 
    itemtype="http://schema.org/BlogPosting" 
    aria-labelledby="{{ title | slug }}-title" 
>
    <header class="project__header">
        <h1 id="{{ title | slug }}-title" class="project__title p-name title" itemprop="headline">{{ title }}</h1>
        <div class="project__meta">

            <p {% if demo %}class="u-mr2"{% endif %}>
                <time class="project__date dt-published" itemprop="datePublished" datetime="{{ page.date | dateToISO }}">{{ page.date | readableDate('dd LLL yyyy') }}</time>
            </p>

            {% if demo %}
            <a href="{{ demo }}" class="btn btn--primary project__demo" target="_blank" rel="noopener noreferrer">
                View Demo
            </a>
            {% endif %}

        </div>
    </header>

    <div class="project__content e-content markdown" itemprop="articleBody">
        {{ content | safe }}
    </div>

    <div class="project__footer">
        <div hidden>
            <a class="u-url" href="{{ page.url | url | absoluteUrl(site.url) }}">{{ title }}</a>
            <p class="h-card p-author">
                <a class="p-name u-url" rel="author" href="{{ site.url }}">{{ author.name }}</a>
                <img class="u-photo" src="{{ author.avatar | url | absoluteUrl(site.url) }}" />
            </p>
        </div>
    </div>
</article>
